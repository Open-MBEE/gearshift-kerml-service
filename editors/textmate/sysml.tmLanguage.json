{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "SysML",
  "scopeName": "source.sysml",
  "fileTypes": ["sysml"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#unrestricted-names" },
    { "include": "#numbers" },
    { "include": "#annotations" },
    { "include": "#literals" },
    { "include": "#declaration-keywords" },
    { "include": "#modifier-keywords" },
    { "include": "#relationship-keywords" },
    { "include": "#control-keywords" },
    { "include": "#annotation-keywords" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.sysml",
          "match": "//.*$"
        },
        {
          "name": "comment.block.documentation.sysml",
          "begin": "/\\*\\*",
          "end": "\\*/",
          "beginCaptures": { "0": { "name": "punctuation.definition.comment.begin.sysml" } },
          "endCaptures": { "0": { "name": "punctuation.definition.comment.end.sysml" } }
        },
        {
          "name": "comment.block.note.sysml",
          "begin": "/\\*",
          "end": "\\*/",
          "beginCaptures": { "0": { "name": "punctuation.definition.comment.begin.sysml" } },
          "endCaptures": { "0": { "name": "punctuation.definition.comment.end.sysml" } }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.sysml",
          "begin": "\"",
          "end": "\"",
          "beginCaptures": { "0": { "name": "punctuation.definition.string.begin.sysml" } },
          "endCaptures": { "0": { "name": "punctuation.definition.string.end.sysml" } },
          "patterns": [
            {
              "name": "constant.character.escape.sysml",
              "match": "\\\\[\"'\\\\bfnt]"
            }
          ]
        }
      ]
    },
    "unrestricted-names": {
      "patterns": [
        {
          "name": "string.quoted.single.unrestricted-name.sysml",
          "begin": "'",
          "end": "'",
          "beginCaptures": { "0": { "name": "punctuation.definition.name.begin.sysml" } },
          "endCaptures": { "0": { "name": "punctuation.definition.name.end.sysml" } },
          "patterns": [
            {
              "name": "constant.character.escape.sysml",
              "match": "\\\\[\"'\\\\bfnt]"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.exponential.sysml",
          "match": "\\b\\d+[eE][+-]?\\d+\\b"
        },
        {
          "name": "constant.numeric.decimal.sysml",
          "match": "\\b\\d+\\.?\\d*\\b"
        }
      ]
    },
    "annotations": {
      "patterns": [
        {
          "name": "storage.type.annotation.sysml",
          "match": "@\\w+"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "constant.language.sysml",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "declaration-keywords": {
      "patterns": [
        {
          "name": "keyword.declaration.sysml",
          "match": "\\b(action|allocation|analysis|attribute|calc|case|concern|connection|constraint|def|enum|flow|frame|interface|item|message|occurrence|package|part|port|render|rendering|requirement|stakeholder|state|succession|use|verification|view|viewpoint)\\b"
        }
      ]
    },
    "modifier-keywords": {
      "patterns": [
        {
          "name": "storage.modifier.sysml",
          "match": "\\b(abstract|constant|default|derived|end|in|individual|inout|library|nonunique|ordered|out|private|protected|public|ref|snapshot|standard|timeslice|variant|variation)\\b"
        }
      ]
    },
    "relationship-keywords": {
      "patterns": [
        {
          "name": "keyword.other.relationship.sysml",
          "match": "\\b(allocate|bind|connect|crosses|defined|dependency|redefines|references|satisfy|specializes|subsets|verify)\\b"
        }
      ]
    },
    "control-keywords": {
      "patterns": [
        {
          "name": "keyword.control.sysml",
          "match": "\\b(accept|after|all|and|as|assert|assume|by|decide|do|else|entry|exhibit|exit|first|for|fork|from|hastype|if|implies|include|istype|join|loop|merge|meta|new|not|of|or|parallel|perform|return|send|terminate|then|to|transition|until|when|while|xor)\\b"
        }
      ]
    },
    "annotation-keywords": {
      "patterns": [
        {
          "name": "keyword.other.annotation.sysml",
          "match": "\\b(about|actor|alias|assign|at|binding|comment|doc|event|expose|filter|import|language|locale|metadata|objective|rep|require|subject|via)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.multi.sysml",
          "match": "::>|:>>|===|!==|\\*\\*|==|!=|<=|>=|:=|::|:>|->|\\.\\.|=>|\\?\\?|\\.\\?"
        },
        {
          "name": "keyword.operator.single.sysml",
          "match": "[~#%&^|*+\\-/<>=?:$\\.!]"
        }
      ]
    }
  }
}
