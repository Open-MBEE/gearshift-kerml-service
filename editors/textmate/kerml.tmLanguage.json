{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "KerML",
  "scopeName": "source.kerml",
  "fileTypes": ["kerml"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#unrestricted-names" },
    { "include": "#numbers" },
    { "include": "#annotations" },
    { "include": "#literals" },
    { "include": "#declaration-keywords" },
    { "include": "#modifier-keywords" },
    { "include": "#relationship-keywords" },
    { "include": "#control-keywords" },
    { "include": "#annotation-keywords" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.kerml",
          "match": "//.*$"
        },
        {
          "name": "comment.block.documentation.kerml",
          "begin": "/\\*\\*",
          "end": "\\*/",
          "beginCaptures": { "0": { "name": "punctuation.definition.comment.begin.kerml" } },
          "endCaptures": { "0": { "name": "punctuation.definition.comment.end.kerml" } }
        },
        {
          "name": "comment.block.note.kerml",
          "begin": "/\\*",
          "end": "\\*/",
          "beginCaptures": { "0": { "name": "punctuation.definition.comment.begin.kerml" } },
          "endCaptures": { "0": { "name": "punctuation.definition.comment.end.kerml" } }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.kerml",
          "begin": "\"",
          "end": "\"",
          "beginCaptures": { "0": { "name": "punctuation.definition.string.begin.kerml" } },
          "endCaptures": { "0": { "name": "punctuation.definition.string.end.kerml" } },
          "patterns": [
            {
              "name": "constant.character.escape.kerml",
              "match": "\\\\[\"'\\\\bfnt]"
            }
          ]
        }
      ]
    },
    "unrestricted-names": {
      "patterns": [
        {
          "name": "string.quoted.single.unrestricted-name.kerml",
          "begin": "'",
          "end": "'",
          "beginCaptures": { "0": { "name": "punctuation.definition.name.begin.kerml" } },
          "endCaptures": { "0": { "name": "punctuation.definition.name.end.kerml" } },
          "patterns": [
            {
              "name": "constant.character.escape.kerml",
              "match": "\\\\[\"'\\\\bfnt]"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.exponential.kerml",
          "match": "\\b\\d+[eE][+-]?\\d+\\b"
        },
        {
          "name": "constant.numeric.decimal.kerml",
          "match": "\\b\\d+\\.?\\d*\\b"
        }
      ]
    },
    "annotations": {
      "patterns": [
        {
          "name": "storage.type.annotation.kerml",
          "match": "@\\w+"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "constant.language.kerml",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "declaration-keywords": {
      "patterns": [
        {
          "name": "keyword.declaration.kerml",
          "match": "\\b(assoc|behavior|binding|class|classifier|connector|datatype|expr|feature|flow|function|interaction|metaclass|metadata|multiplicity|namespace|package|predicate|render|rendering|step|struct|succession|type|view|viewpoint)\\b"
        }
      ]
    },
    "modifier-keywords": {
      "patterns": [
        {
          "name": "storage.modifier.kerml",
          "match": "\\b(abstract|composite|const|default|derived|end|in|inout|library|nonunique|ordered|out|portion|private|protected|public|standard|var)\\b"
        }
      ]
    },
    "relationship-keywords": {
      "patterns": [
        {
          "name": "keyword.other.relationship.kerml",
          "match": "\\b(chains|conjugate|conjugates|conjugation|crosses|dependency|differences|disjoining|disjoint|featured|featuring|intersects|inverse|inverting|redefines|redefinition|references|specialization|specializes|subclassifier|subset|subsets|subtype|typed|typing|unions)\\b"
        }
      ]
    },
    "control-keywords": {
      "patterns": [
        {
          "name": "keyword.control.kerml",
          "match": "\\b(all|and|as|by|else|first|for|from|hastype|if|implies|istype|meta|new|not|of|or|return|then|to|xor)\\b"
        }
      ]
    },
    "annotation-keywords": {
      "patterns": [
        {
          "name": "keyword.other.annotation.kerml",
          "match": "\\b(about|alias|bool|comment|doc|expose|filter|import|inv|language|locale|member|rep)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.multi.kerml",
          "match": "::>|:>>|===|!==|\\*\\*|==|!=|<=|>=|:=|::|:>|->|\\.\\.|=>|\\?\\?|\\.\\?"
        },
        {
          "name": "keyword.operator.single.kerml",
          "match": "[~#%&^|*+\\-/<>=?:$\\.!]"
        }
      ]
    }
  }
}
