<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Application loggers â€” override with -Dgearshift.log.level=DEBUG -->
    <logger name="org.openmbee.gearshift" level="${gearshift.log.level:-INFO}" />
    <logger name="org.openmbee.mdm" level="${gearshift.log.level:-INFO}" />

    <!-- Third-party loggers -->
    <logger name="org.antlr" level="WARN" />
    <logger name="io.netty" level="WARN" />
    <logger name="io.ktor" level="WARN" />

    <root level="${root.log.level:-WARN}">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
